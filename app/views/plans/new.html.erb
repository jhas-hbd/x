<h2>プラン入力</h2>

<% if @plan.errors.any? %>
  <%= @plan.errors.count %>件のエラーが発生しました
  <ul>
    <% @plan.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @plan, method: :post do |f| %>
  <div class="form_group">
    <%= f.label :タイトル %>
    <%= f.text_field :title %>
  </div>
  <div class="form_group">
    <%= f.label :都道府県 %>
    <%= f.select :prefecture, Plan.prefectures.keys, { include_blank: '---'} %>
  </div>
  <div class="form_group">
    <%= f.label :宿泊日数 %>
    <%= f.select :stay_days, Plan.stay_days.keys, { include_blank: '---'} %>
  </div>
  <div class="form_group">
    <%= f.label :予算 %>
    <%= f.select :budget, Plan.budgets.keys, { include_blank: '---'} %>
  </div>
  <div class="form_group">
    <%= f.label :主な移動手段 %>
    <%= f.select :main_vehicle, Plan.main_vehicles.keys, { include_blank: '---'} %>
  </div>
  <div class="form_group">
    <%= f.label :感想 %>
    <%= f.text_area :impression %>
  </div>
  <div class="form-group">
    <%= f.label :プラン画像 %>
    <%= f.file_field :plan_images, multiple: true, class: "form-control-file", accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.submit "日程入力", class: "btn btn-info" %>
  </div>
<% end %>